# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# OpenAI API Key
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Google Gemini API Key
# Get it from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-key-here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_FREE_PATIENT_LIMIT=3

# Upstash Redis for Rate Limiting (Optional for development, required for production)
# Get it from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here

# Node Environment
NODE_ENV=development

# Sentry Error Tracking (Optional - for production monitoring)
# Get it from: https://sentry.io
# See docs/SENTRY_SETUP.md for detailed setup instructions
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-organization-slug
SENTRY_PROJECT=your-project-name
SENTRY_AUTH_TOKEN=your-auth-token  # Only needed for production source map upload
